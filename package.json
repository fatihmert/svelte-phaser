{
  "name": "svelte-phaser-monorepo",
  "version": "0.0.1",
  "description": "Create pixi.js apps with svelte 3",
  "repository": "https://github.com/mattjennings/svelte-pixi",
  "author": "Matt Jennings",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean:node_modules": "find . -name \"node_modules\" -exec rm -rf '{}' +"
  },
  "workspaces": {
    "packages": [
      "examples/*",
      "templates/*",
      "packages/*",
      "docs"
    ],
    "nohoist": [
      "**/svelte",
      "**/@svelte-docs/core",
      "**/@svelte-docs/core/**",
      "**/@svelte-docs/server",
      "**/@svelte-docs/server/**",
      "**/@svelte-docs/publisher",
      "**/@svelte-docs/publisher/**",
      "**/@svelte-docs/themes",
      "**/@svelte-docs/themes/**"
    ]
  },
  "resolutions": {
    "svelte": "^3.21.0"
  },
  "devDependencies": {
    "svelte": "^3.21.0",
    "phaser": "^3.23.0",
    "prettier": "^2.0.5",
    "eslint": "6.8.0",
    "eslint-plugin-svelte3": "^2.7.3"
  },
  "keywords": [
    "svelte",
    "phaser"
  ]
}
